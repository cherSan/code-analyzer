{
  "name": "code-analyzer",
  "version": "0.1.0",
  "description": "Tool for preparing files for MR with code analysis",
  "main": "dist/index.js",
  "bin": {
    "code-analyzer": "./bin/code-analyzer.js"
  },
  "scripts": {
    "build": "tsc && npm run build:server",
    "build:server": "cd server && npm run build",
    "prepublishOnly": "npm run build && npm run build:server",
    "example:test": "cd example && npm run code-analyzer",
    "example:push": "cd example && git add . && git commit -m \"Auto-update\" && git push",
    "main:push": "git add . && git commit -m \"Auto-update\" && git push",
    "push:all": "npm run example:push && npm run main:push"
  },
  "files": [
    "dist",
    "bin",
    "src"
  ],
  "keywords": [
    "code",
    "analyzer",
    "mr",
    "review"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/eslint": "^8.56.12",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.2",
    "install": "^0.13.0",
    "jest": "^30.2.0",
    "npm": "^11.6.2",
    "ts-jest": "^29.4.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.553.0",
    "next": "^16.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "simple-git": "^3.22.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "uuid": "^13.0.0"
  },
  "workspaces": [
    "server",
    "example"
  ]
}
